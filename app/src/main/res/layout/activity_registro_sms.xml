<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomorado"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.toshiba.tesisparte1.com.example.toshiba.restaurantapp.RegistroSms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="356dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:text="REGISTRO"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#ff4e83ff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/Usreg"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#ff4e83ff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/Pwreg"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:textColor="#ffaaaaaa"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/consulta"
            android:onClick="enviar"
            android:src="@android:drawable/ic_dialog_email" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/txtC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el Codigo"
            android:textColor="#ff47ca6a"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:textColor="#ffaaaaaa"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circulo"
            android:onClick="Registrar"
            android:src="@android:drawable/ic_menu_save" />

    </LinearLayout>


</RelativeLayout>
